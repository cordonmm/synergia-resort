                    <div class="grid-boxes-in">
                        <?php if(Str::lower($enlace->tipo) == "jpg"): ?>
                            <a href="<?php echo asset('entradas/'.$enlace->url); ?>" rel="gallery1" class="fancybox img-hover-v1" title="<?php echo $entrada->titulo; ?>">
                                <img class="img-responsive" src="<?php echo asset('entradas/'.$enlace->url); ?>" alt="<?php echo $entrada->titulo; ?>">
                            </a>
                        <?php else: ?>
                            <?php echo HTML::decode($enlace->url); ?>
                        <?php endif; ?>
                    </div>
